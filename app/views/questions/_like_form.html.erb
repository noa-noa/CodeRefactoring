<% unless current_user.liking?(object) %>
<div id="like_form">
    <%= form_for(current_user.relationships.build(liked_id: object.id), remote: true) do |f| %>
    	<div><%= f.hidden_field :liked_id %></div>
    	<%= f.submit "いいね！", class: "btn btn-small btn-primary"%>
    <% end %>
</div>
<% end %>