<div class="row">
  <ul class="media-list col-md-8" id='box'>
    <% @questions.each do |question| %>
      <li class="media">
        <div class="pull-left">
          <a href=<%= user_path(question.user_id) %>>
            <%= image_tag(get_user(question.user_id).image_url, size: '68x68', class: 'media-object') %>
          </a>
        </div>
        <div class="media-body">
          <h4 class="media-heading">
            <%=link_to question.title, question %>
            <% question.tag_list.each do |tag| %>
              <div id='tag' class="pull-right" style="font-size: 15px; display: block;">
                #<%= tag %>
              </div>
            <% end %>
          </h4>
          <%= simple_format(question.description) %>
          <div class='time pull-right'><%= question.updated_at.to_formatted_s(:without_second) %></div>
        </div>
      </li>
    <hr>
    <% end %>
  </ul>
</div>